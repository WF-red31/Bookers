<div class = "edit-title">
<h1>Editing Book</h1>
</div>

<%= render "layouts/errors", obj: @book %>
<%= form_with model: @book do |f| %>

  <div class = "field">
    <label for = "book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class ="field">
    <label for = "book_body">Body</label>
    <%= f.text_field :body %>
  </div>

  <div class = "actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<a href = "/books">Back</a>